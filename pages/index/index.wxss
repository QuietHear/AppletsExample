.container {
  padding-top: 120rpx;
}

/*上部功能区域  */

.top {
  width: 440rpx;
  display: flex;
  margin: 0 auto 60rpx;
}

.top .top-left {
  background: orange;
  opacity: 0.6;
  font-weight: bold;
  color: #fff;
  font-size: 62rpx;
  width: 155rpx;
  height: 155rpx;
  text-align: center;
  margin-right: 20rpx;
  line-height: 150rpx;
  box-sizing: border-box;
  border-radius: 6rpx;
}

.top .top-right {
  display: inline-flex;
  flex-wrap: wrap;
  width: calc(100% - 175rpx);
  height: 100%rpx;
  justify-content: center;
}

.top .top-right>view {
  background: #ccc0b3;
  text-align: center;
  width: calc((100% - 20rpx)/2);
  height: 80rpx;
  border-radius: 3rpx;
}

.top .top-right>view:nth-child(2) {
  margin-left: 20rpx;
}

.top .top-right>view:last-child {
  background: #e4393c;
  color: #fff;
  margin-top: 20rpx;
  height: 55rpx;
  width: 75%;
  line-height: 55rpx;
  font-size: 30rpx;
  cursor: pointer;
}

.top .top-right>view view {
  margin: 0;
  font-size: 25rpx;
  color: #fff;
  height: 50%;
  line-height: 40rpx;
  margin-bottom: 2rpx;
}

.top .top-right>view view:first-child {
  color: gray;
}

/*游戏区域  */

.gridPanel {
  width: 440rpx;
  height: 440rpx;
  background: #bbada0;
  position: relative;
  border-radius: 10rpx;
  padding-right: 8rpx;
  box-sizing: border-box;
  margin: 0 auto;
}

.grid {
  background: #ccc0b3;
  z-index: 1;
}

.cell, .grid {
  width: 100rpx;
  height: 100rpx;
  border-radius: 5rpx;
  position: absolute;
  text-align: center;
  line-height: 100rpx;
  z-index: 2;
}

.cell[id^="c0"], .grid[id^="g0"] {
  top: 8rpx;
}

.cell[id^="c1"], .grid[id^="g1"] {
  top: 116rpx;
}

.cell[id^="c2"], .grid[id^="g2"] {
  top: 224rpx;
}

.cell[id^="c3"], .grid[id^="g3"] {
  top: 332rpx;
}

.cell[id$="0"], .grid[id$="0"] {
  left: 8rpx;
}

.cell[id$="1"], .grid[id$="1"] {
  left: 116rpx;
}

.cell[id$="2"], .grid[id$="2"] {
  left: 224rpx;
}

.cell[id$="3"], .grid[id$="3"] {
  left: 332rpx;
}

/*弹窗*/

.pop {
  background: #ccc0b3;
  opacity: 0.96;
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 100;
  top: 0;
  left: 0;
  font-size: 47rpx;
  text-align: center;
  font-weight: bold;
  box-sizing: border-box;
}

/* 设置弹窗 */

.setting-pop {
  padding-top: 120rpx;
}

.setting-pop view {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  color: rgba(0, 0, 0, 0.4);
  font-size: 30rpx;
}

.setting-pop button {
  color: greenyellow;
  display: block;
  width: 50%;
  margin: 0 auto;
  background: gray;
  border-radius: 10rpx;
}

.setting-pop button + button {
  margin-top: 50rpx;
}

/* 结束弹窗 */

.end-pop {
  color: red;
  padding-top: 147rpx;
}

.end-pop text {
  display: flex;
  font-size: 50rpx;
  height: 80rpx;
  align-items: center;
  justify-content: center;
}

.end-pop button {
  color: greenyellow;
  margin: 0 auto;
  background: gray;
  border-radius: 10rpx;
  margin-top: 40rpx;
  width: 200rpx;
  display: block;
}
